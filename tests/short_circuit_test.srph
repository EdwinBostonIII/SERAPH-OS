fn main() -> i32 {
    let mut counter: i32 = 0;

    // Test &&: false && anything = false (short-circuit)
    // If short-circuit works, right side won't be evaluated
    let a: bool = false;
    let b: bool = true;

    // Since a is false, b shouldn't matter for &&
    if a && b {
        counter = counter + 100;  // Should not execute
    }

    // Test ||: true || anything = true (short-circuit)
    let c: bool = true;
    let d: bool = false;

    // Since c is true, d shouldn't matter for ||
    if c || d {
        counter = counter + 10;  // Should execute
    }

    // Test without short-circuit: both sides evaluated
    let e: bool = true;
    let f: bool = true;

    if e && f {
        counter = counter + 1;  // Should execute
    }

    // Expected: 0 + 10 + 1 = 11
    return counter;
}
