fn main() -> i32 {
    let a: i32 = 0b1100;
    let b: i32 = 0b1010;

    // Bitwise AND: 1100 & 1010 = 1000 = 8
    let and_result: i32 = a & b;

    // Bitwise OR: 1100 | 1010 = 1110 = 14
    let or_result: i32 = a | b;

    // Bitwise XOR: 1100 ^ 1010 = 0110 = 6
    let xor_result: i32 = a ^ b;

    // Shift left: 1 << 3 = 8
    let shl_result: i32 = 1 << 3;

    // Shift right: 16 >> 2 = 4
    let shr_result: i32 = 16 >> 2;

    // Total should be: 8 + 14 + 6 + 8 + 4 = 40
    return and_result + or_result + xor_result + shl_result + shr_result;
}
